.section-how
	background #eaeaea 
	&__in
		position relative
		padding-top 59px
		padding-bottom 49px
		min-height 609px
		clearfix()
	&__title
		margin-bottom 39px
		text-align center
		
		
.steps
	margin-left 55px
	&__i
		position relative
		padding-left 150px
		// min-height 115px
		clearfix()
	&__days
		position absolute
		top 1px
		left 0
		size 119px 115px
		background-color white
		font-bld(14px, 115px)
		text-align center
		color $color-blue
		box-shadow inset 2.5px 4.3px 8px rgba(1, 1, 1, 0.25)
		border-radius 50%
		span
			font-size 24px
		&:after
			position absolute
			bottom -28px
			left 50%
			margin-left -17px
			content ''
			sprite($triangle)
	&__i
		&_2
			.steps__days
				top 22px
		&_3
			.steps__days
				top 20px
	&__text
		border-top  4px solid #ccc 
		padding-top 12px
		margin-bottom 18px
		width 245px
		p
			margin-bottom 17px
			font-reg(14px,17px)
	&__i
		&:first-child
			.steps__text
				border-top  none 
		&:last-child
			.steps__days
				&:after
					display none