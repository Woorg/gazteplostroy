.header
	background #FFF
	&__in
		min-height 130px
		clearfix()
	&__left
		float left
		width 22.5%
	&__right
		float right
		width 24.5%
.logo
	margin-top 22px
	margin-bottom 6px
	display block
	sprite($logo)
	text-indent -9999px
	&_sticky
		margin-top 5px
		margin-bottom 0
		margin-right 50px
		width 100px
		height 50px
		float left
		background url('../images/logo.png') no-repeat
		background-size contain

.slogan
	font-reg(9px,13px)
	color $color-darkgray
	text-transform uppercase

.menu
	float left
	font-size 0
	&_main
		margin-top 20px
	&__i
		margin-left 50px
		display inline-block
		&:first-child
			margin-left 0
	&__link
		font-reg(14px,1)
		color $color-darkgray

.contacts
	color $color-darkgray
	text-align center
	&__title
		margin-bottom 3px
		font-reg(14px,1)
		&_sticky
			margin-bottom 5px
	&__phone
		margin-bottom 3px
		font-reg(30px,1)
		color $color-blue
		&_small
			font-size 22px
	&__text
		margin-bottom 7px
		font-reg(12px,1)
	&_top
		padding-top 19px
		float right
	&_sticky
		margin-top 5px
		float right

.button
	padding 8px 9px 8px 11px
	display inline-block
	background $color-blue
	text-transform uppercase
	font-bld(14px,1)
	color $color-white
	cursor pointer
	text-decoration underline
	text-transform uppercase
	&:hover
		background #FFED00
		text-decoration none
	&_feedback
		padding 8px 12px
		font-reg(18px,1)


.topline
	position fixed
	left 0
	right 0
	display none
	width 100%
	height 50px
	background #FFF
	z-index 2
	&__in
		margin auto
		width 1000px

